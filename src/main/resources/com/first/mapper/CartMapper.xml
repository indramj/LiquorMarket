<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	<mapper namespace="com.first.mapper.CartMapper">
	
<select id = "getCartList" resultType = "com.first.domain.CartItemVO">
	select * from table_cartitem where memberid = #{memberId}
</select>
	
	<!-- 카트 추가 -->
	<insert id="addItemToCart">

		insert into table_cartitem(memberId, lid , price )
		values(#{memberId},#{lid}, #{price} )

	</insert>


	<!-- 카트 삭제 -->
	<delete id="deleteCart">

		delete from table_cart where cartId = #{cartId}

	</delete>

	<!-- 카트 수량 수정 -->
	<update id="modifyCount">

		update drink_cart set drinkCount=#{drinkCount} where cartId = #{cartId}

	</update>


</mapper>